{
    "name": "wp-praxis/symbolic-engine",
    "description": "PHP Symbolic Engine for WP Praxis - Declarative WordPress workflow orchestration",
    "type": "library",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=7.4",
        "symfony/yaml": "^5.4|^6.0",
        "mustangostang/spyc": "^0.6.3",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "WPPraxis\\Engine\\": "src/"
        },
        "files": [
            "Symbol.php",
            "symbolic-engine.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WPPraxis\\Engine\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 ."
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
