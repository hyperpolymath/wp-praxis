# WP Praxis GraphQL API - Environment Configuration

# Server Configuration
NODE_ENV=development
GRAPHQL_PORT=4000
GRAPHQL_HOST=localhost

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# GraphQL Features
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true

# Database Configuration (PostgreSQL/Ecto)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wp_praxis_dev
DB_USER=postgres
DB_PASSWORD=postgres

# Swarm Database
SWARM_DB_PATH=../swarm/swarm-state.db

# PowerShell Engine
PWSH_BINARY=pwsh
SYMBOLIC_ENGINE_PATH=../core

# Rust Injector
INJECTOR_BINARY_PATH=../../wp_injector/target/release/wp_injector

# Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info

# Optional: Redis for caching
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
