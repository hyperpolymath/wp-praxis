{
    "name": "wp-praxis/wordpress-plugin",
    "description": "WP Praxis WordPress Plugin - Symbolic workflow orchestration for WordPress",
    "type": "wordpress-plugin",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "WPPraxis\\Plugin\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WPPraxis\\Plugin\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=WordPress .",
        "format": "phpcbf --standard=WordPress ."
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
